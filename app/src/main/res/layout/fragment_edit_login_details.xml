<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.app.EditLoginDetailsFragment">

    <TextView
        android:id="@+id/tv_edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="24dp"
        android:text="Name"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:fontFamily="@font/figtreebold"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_edit_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_edit_name"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/edittext_login">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_edit_name_field"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="@font/figtreeregular"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_edit_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_edit_name_layout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="24dp"
        android:text="Email"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:fontFamily="@font/figtreebold"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_edit_email_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_edit_email"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/edittext_login">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_edit_email_field"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="@font/figtreeregular"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_edit_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_edit_email_layout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="24dp"
        android:text="Password"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:fontFamily="@font/figtreebold"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_edit_password_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_edit_password"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/edittext_login">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_edit_name_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="@font/figtreeregular"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_edit_password_layout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="24dp"
        android:text="Note: Leave the password field empty if you do not wish to change it"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/figtreeregular"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_save_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:textSize="16sp"
        android:padding="12dp"
        android:text="Save Details"
        android:fontFamily="@font/figtreebold"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/button_background_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>